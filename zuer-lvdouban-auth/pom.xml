    <dependencies>
        <dependency>
            <groupId>com.zuer</groupId>
            <artifactId>zuer-lvdouban-common</artifactId>
            <version>0.0.1-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <!--热启动
