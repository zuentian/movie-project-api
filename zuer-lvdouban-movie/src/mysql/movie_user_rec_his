create table  movie_user_rec_his
(
    ID            int auto_increment
        primary key,
    MOVIE_ID      varchar(36)                             null,
    USER_ID       varchar(36)                             null,
    STATE         varchar(2)                              null comment '1-想看 2-看过',
    SCORE         decimal(2, 1) default 0.0               null comment '评分',
    MARK_TIME     datetime      default CURRENT_TIMESTAMP null comment '标记时间',
    CRT_TIME      datetime      default CURRENT_TIMESTAMP null,
    SHORT_COMMAND text                                    null comment '短评'
)
    comment '用户和电影关联记录历史表';